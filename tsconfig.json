{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015", //dodałem tak jak w angulargrid
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true, // Workaround for https://github.com/angular/angular/issues/17863. Remove this if you upgrade to a fixed version of Angular.
    "noImplicitAny": false, // dodałem
    "target": "es5",
    "types": ["webpack-env"],//było node
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom",
      "es2015"
    ]    //dodałem es2015
  },
  "exclude": [ "bin", "node_modules/*" ] //dodałem
}
